<div class="<?php echo isset($container_class) ? $container_class : 'full-section'; ?>">
	<h2>Rack Devices</h2>

	<table class="datatable">
		<tr>
			<th>Name</th>
			<th>Nickname</th>
			<th>Type</th>
			<th>Hostname</th>
		</tr>
	<?php
		if(count($devices) == 0):
	?>
		<tr>
			<td colspan="4">No devices configured.</td>
		</tr>
