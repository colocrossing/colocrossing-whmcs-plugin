		endif;

		foreach ($devices as $i => $device):
			$id = $device->getId();
			$url = ColoCrossing_Utilities::buildUrl($base_url, array(
				'controller' => 'devices',
				'action' => 'view',
				'id' => $id
			));

			$type = $device->getType();
	?>
		<tr>
			<td><a href="<?php echo $url; ?>"><?php echo $device->getName(); ?></a></td>
			<td><?php echo $device->getNickname(); ?></td>
			<td><?php echo $type->getName(); ?></td>
			<td><?php echo $device->getHostname(); ?></td>
		</tr>
	<?php
		endforeach;
	?>
	</table>
</div>
